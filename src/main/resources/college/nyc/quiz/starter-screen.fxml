<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="college.nyc.quiz.starterScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <top>
         <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
            
                                        <Label layoutX="326.0" prefHeight="59.0" prefWidth="588.0" text="General Knowledge Quiz">
                  <font>
                     <Font name="Arial" size="52.0" />
                  </font>
               </Label>
               <Label layoutX="496.0" layoutY="73.0" text="Please Login or Register.">
                  <font>
                     <Font name="Arial" size="22.0" />
                  </font>
               </Label>
            </children>
         </AnchorPane>
      </top>
   </BorderPane>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
          <Button fx:id="registerButton" alignment="CENTER" onAction="#onRegisterButtonClick" text="Register">
            <HBox.margin>
               <Insets right="100.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" text="Login" />
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>
</VBox>
